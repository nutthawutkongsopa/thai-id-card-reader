<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net472;netcoreapp3.1;net5.0;net6.0</TargetFrameworks>
    <Version>0.1.1</Version>
		<Authors>Nutthawut Kongsopa</Authors>
		<Company>-</Company>
		<Product>Thai ID Card Reader</Product>
		<Description>A library for reading Thai ID card</Description>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/nutthawutkongsopa/thai-id-card-reader</RepositoryUrl> 
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PCSC" Version="6.0.0" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../doc/readme.md" Pack="true" PackagePath="/"/>
  </ItemGroup>

</Project>
